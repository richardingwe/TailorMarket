<%- include('partials/header.ejs') %>

<!-- jobs listing -->
<div class="w3-container w3-center w3-dark-grey" style="padding:75px 16px" id="pricing">
  <h1>Latest Jobs</h1>
  <!-- <p class="w3-large">Choose a pricing plan that fits your needs.</p> -->
  <div class="w3-row-padding" style="margin-top:10px">
    <% for(job of jobs) { %>
    <div class="w3-block w3-section">
      <ul class="w3-ul w3-white w3-hover-shadow">
        <li class="w3-black w3-xlarge w3-padding-32">Sample Image</li>
        <li class="w3-padding-small"><h3><%= job.title %></h3></li>
        <li class="w3-padding-small"><%= job.description %></li>
        <!-- <li class="w3-padding-16"><b>Endless</b> Support</li> -->
        <li class="w3-padding-small">
            <h2><b>Budget:</b>N<%= job.budget %></h2>
        </li>
        <li class="w3-padding-small"><b><%= job.contact_email %></b></li>
        <li class="w3-padding-small"><b>Posted At: </b><%= job.createdAt %></li>
        <li class="w3-light-grey w3-padding-small">
          <button class="w3-button w3-black w3-padding-16">Send Offer</button>
        </li>
      </ul>
    </div>
    <% } %>
  </div>
</div>    


<%- include('partials/footer.ejs') %>